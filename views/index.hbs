<h1>Your to-do list's</h1>
<a class="purple waves-effect waves-light btn" href="/new">Add Item</a>

<ul>
    {{#each lists}}
        <div class="row">
            <div class="col s12 m6">
                <div class="card grey ligthen-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{this.name}}</span>
                        <li>
                            <p> {{this.date}} </p>
                        </li>
                        <li>
                            <p> {{this.time}} </p>
                        </li>
                        <li>
                            <p> {{this.event}} </p>
                        </li>
                    </div>
                    <div class="card-action">
                        <a href="/detail/{{this.id}}">view item</a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</ul>
